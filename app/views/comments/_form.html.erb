<%= form_with model: comment do |f| %>
<div>
    <%= f.text_area :body, size: "50x5" %>
    <% comment.errors.full_messages_for(:body).each do |message| %>
    <div> <%= message %> </div>
    <% end %>
</div>

<div>
    <%= f.hidden_field :user_id, value: "#{current_user.id}" %>
</div>

<div>
    <%= f.hidden_field :post_id %>
</div>

<div> <%= f.submit %> </div>

<% end %>