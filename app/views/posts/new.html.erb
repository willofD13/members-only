<h1> New Post: <h1>

<%= form_with model: @post do |post| %>
<div>
    <%= form.label :Title %><br>
    <%= form.text_field :title %>
    <%= errors.full_messages_for(:title).each do |message| %>
    <div> <%= message %> </div>
    <% end %>
</div>

<div>
    <%= form.label :Text %><br>
    <%= form.text_field :body %>
    <%= errors.full_messages_for(:body).each do |message|%>
    <div> <%= message %></div>
    <% end %>
</div>

<div> <%= form.submit %> </div>

<% end %>