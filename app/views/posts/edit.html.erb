<h1> Edit post </h1>

<%= form_with model: @post do |f|%>
<div>
    <%= f.label :title %><br>
    <%= f.text_field :title%>
    <% @user.errors.full_messages_for(:title).each do |message|%>
    <div> <%= message %> </div>
    <% end %>
</div>

<div>
    <%= f.label :body %><br>
    <%= f.email_field :body %>
    <% @user.errors.full_messages_for(:body).each do |message| %>
    <div><%= message %></div>
    <% end %>
</div>

<div><%= f.submit %></div>
<% end %>