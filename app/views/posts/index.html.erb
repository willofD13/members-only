<h1>Posts:</h1>

<ul>
    <% @posts.each do |post|%>
    <li>
        <% if user_signed_in? %>
            <h3> Author </h3>
            <div><%= post.user.username%></div>
        <% end %>
        <h3> Title </h3>
        <div> <%= post.title %> </div>
        <h3> Body </h3>
        <div> <%= post.body %> </div><br>
        <%if user_signed_in? && post.user_id == current_user.id %>
            <%=link_to "Edit post", edit_post_path(post.id)%>
        <% end %>
    </li>
    <% end %>
</ul>

<%= link_to "Back to home page", root_path%>